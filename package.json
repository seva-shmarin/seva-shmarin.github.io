{
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@fastify/pre-commit": "2.2.1",
		"@html-validate/jest-config": "3.13.0",
		"@types/amphtml-validator": "1.0.4",
		"@types/jest": "30.0.0",
		"@types/node": "24.8.1",
		"@types/postcss-import": "14.0.3",
		"@types/postcss-url": "10.0.4",
		"amphtml-validator": "1.0.38",
		"cssnano": "7.1.1",
		"fast-xml-parser": "5.3.0",
		"html-validate": "10.1.2",
		"jest": "30.2.0",
		"nodemon": "3.1.10",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-import": "16.1.1",
		"postcss-sort-media-queries": "5.2.0",
		"postcss-url": "10.1.3",
		"posthtml-bem-linter": "0.1.8",
		"typescript": "5.9.3"
	},
	"imports": {
		"#!/*": "./app/*"
	},
	"main": "./app/server/main.js",
	"name": "seva-shmarin",
	"pre-commit": [
		"lint-format",
		"test"
	],
	"private": true,
	"scripts": {
		"build": "postcss app/client/*.css -d public/bundles && node ./tools/build.js",
		"dev": "nodemon ./app/server/preview.js",
		"lint": "npm run type-check && biome check",
		"lint-format": "npm run type-check && biome check --write",
		"preview": "node ./app/server/preview.js",
		"test": "npm run build && jest",
		"type-check": "tsc -p ./tsconfig.json",
		"upgrade": "node ./tools/upgrade.js"
	},
	"type": "module"
}
